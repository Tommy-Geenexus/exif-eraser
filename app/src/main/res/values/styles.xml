<resources>

    <style name="Widget.ExifEraser.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.ExifEraser.TextInputEditText.OutlinedBox
        </item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="hintTextColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.ExifEraser.Button.Sheet.Bottom" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?android:textColorPrimaryNoDisable</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconPadding">@dimen/spacing_large</item>
        <item name="iconTint">?attr/colorDrawable</item>
        <item name="iconTintMode">src_atop</item>
    </style>

    <style name="Widget.ExifEraser.Chip.Action.Outlined" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="chipBackgroundColor">?android:colorBackground</item>
        <item name="chipIconTint">?attr/colorDrawable</item>
        <item name="chipStrokeWidth">@dimen/stroke_width_nano</item>
    </style>
</resources>
