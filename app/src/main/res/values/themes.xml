<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.ExifEraser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.ExifEraser.Dialog.Material.Alert
        </item>
        <item name="alertDialogTheme">@style/ThemeOverlay.ExifEraser.Dialog.Alert</item>
        <item name="preferenceTheme">@style/ThemeOverlay.ExifEraser.Preference</item>
    </style>

    <style name="Theme.ExifEraser" parent="Base.Theme.ExifEraser">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/color_teal_500</item>
        <item name="colorPrimarySurface">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorOk">@color/color_green</item>
        <item name="colorAccept">@color/color_blue</item>
        <item name="colorDrawable">@color/csl_drawable_day</item>
        <item name="colorDrawableInverse">@color/csl_drawable_night</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ExifEraser.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_teal_500_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.ExifEraser</item>
    </style>

    <style name="ThemeOverlay.ExifEraser.Sheet.Bottom" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            @android:color/transparent
        </item>
    </style>

    <style name="ThemeOverlay.ExifEraser.Dialog.Alert" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="ThemeOverlay.ExifEraser.Dialog.Material.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="ThemeOverlay.ExifEraser.Preference" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="ThemeOverlay.ExifEraser.TextInputEditText.OutlinedBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:colorControlActivated">?attr/colorAccent</item>
    </style>
</resources>
