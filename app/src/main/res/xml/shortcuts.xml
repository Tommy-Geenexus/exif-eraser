        android:shortcutShortLabel="@string/choose_image_directory">

        <intent
            android:action="com.none.tom.exiferaser.ACTION_CHOOSE_IMAGE_DIRECTORY"
            android:targetClass="com.none.tom.exiferaser.ExifEraserActivity"
            android:targetPackage="com.none.tom.exiferaser" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_launch_camera"
        android:shortcutId="launch_camera"
        android:shortcutLongLabel="@string/take_picture"
        android:shortcutShortLabel="@string/take_picture">

        <intent
            android:action="com.none.tom.exiferaser.ACTION_LAUNCH_CAMERA"
            android:targetClass="com.none.tom.exiferaser.ExifEraserActivity"
            android:targetPackage="com.none.tom.exiferaser" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
