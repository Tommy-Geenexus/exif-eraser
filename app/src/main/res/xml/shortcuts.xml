<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_choose_image"
        android:shortcutId="choose_image"
        android:shortcutLongLabel="@string/choose_image"
        android:shortcutShortLabel="@string/choose_image">

        <intent
            android:action="com.none.tom.exiferaser.ACTION_CHOOSE_IMAGE"
            android:targetClass="com.none.tom.exiferaser.ExifEraserActivity"
            android:targetPackage="com.none.tom.exiferaser" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_choose_images"
        android:shortcutId="choose_images"
        android:shortcutLongLabel="@string/choose_images"
